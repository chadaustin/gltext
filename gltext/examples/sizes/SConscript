Import('baseEnv pkg')
Import('SetupFreeType SetupGLUT SetupOpenGL')

# Clone the environment
env = baseEnv.Copy()
SetupFreeType(env)
SetupGLUT(env)
SetupOpenGL(env)

prog = pkg.createProgram('sizes', env)
prog.addIncludes(['#src'])
prog.addLibPaths(['#src'])
prog.addLibs(['gltext'])
prog.addSources(['main.cpp'])
