import os
pj = os.path.join

Import('baseEnv pkg')
Import('SetupFreeType SetupOpenGL')

sources = Split("""
   gltext.cpp
   AbstractRenderer.cpp
   BitmapRenderer.cpp
   FTFont.cpp
   FTGlyph.cpp
   FTLibrary.cpp
   GLPixelGlyph.cpp
   GLTextureGlyph.cpp
   PixmapRenderer.cpp
   TextureRenderer.cpp
""")

# Clone the environment
env = baseEnv.Copy()
SetupFreeType(env)
SetupOpenGL(env)


lib = pkg.createSharedLibrary('gltext', env)
lib.addSources(sources)
lib.addHeaders(['gltext.h'])
